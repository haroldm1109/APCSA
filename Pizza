package mod2;

/**
 *
 * @author Harold Jr
 */
public class Pizza 
{
    private String typeOfPizza;
    private int slices;
    private double inches;
    
    public Pizza()
    {
        
    }
    
    public Pizza (String t, int s, double i)
    {
        typeOfPizza = t;
        slices = s;
        inches = i;
    }
    
    public void changeType(String t)
    {
        typeOfPizza = t;
    }
            
  public String getType()
    {
    return typeOfPizza;
    }

    public int getSlices()
    {
    return slices;
    }
    
    public double getInches()
    {
    return inches;
    }


    public void printOutPizza()
    {
    System.out.println("ype of Pizza:\t" + getType() + "\n " + "Slices:\t" + getSlices() + "\n " + "Inches:\t" + getInches() + "\n ");
    }
    
       
        
public static void main(String[] args)
{
    Pizza pizza1 = new Pizza ("Pepperoni", 8 , 12.0 );
    pizza1.printOutPizza();
}
}
